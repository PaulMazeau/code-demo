---
import ChevronRightIcon from '../../assets/icons/chevron-right.svg';
import SeasonActionButton from './SeasonActionButton.astro';

interface Props {
	cinemaName: string;
	cinemaDetailsUrl: string;
	seasonBookingUrl: string;
}

const { cinemaName, cinemaDetailsUrl, seasonBookingUrl } = Astro.props;
---

<header class="tw:flex tw:flex-wrap tw:items-center tw:justify-between tw:gap-4 tw:border-b tw:border-neutral-base tw:pb-6">
	<div class="tw:flex tw:flex-wrap tw:items-baseline tw:gap-5">
		<h1 class="tw:font-trade tw:text-display-xl tw:font-semibold tw:uppercase tw:leading-none tw:tracking-wide tw:text-neutral-primary">
			{cinemaName}
		</h1>
		<a
			href={cinemaDetailsUrl}
			class="tw:inline-flex tw:min-h-11 tw:items-center tw:gap-1 tw:text-body-sm tw:font-medium tw:text-neutral-primary focus-visible:tw:outline-2 focus-visible:tw:outline-offset-2 focus-visible:tw:outline-brand-base"
			aria-label={`Voir la fiche cinéma ${cinemaName}`}
		>
			<span>Voir la fiche cinéma</span>
			<ChevronRightIcon aria-hidden="true" focusable="false" class="tw:size-4" />
		</a>
	</div>

	<SeasonActionButton href={seasonBookingUrl} label="Réserver toute la saison" />
</header>
